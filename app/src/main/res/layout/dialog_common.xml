<?xml version="1.0" encoding="utf-8"?><!--通用Dialog布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="18dp"
    android:layout_marginRight="18dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/dialog_common_bg">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_common_bg"
            android:lineSpacingMultiplier="1.1"
            android:padding="10dp"
            android:minHeight="75dp"
            android:gravity="center"
            android:textColor="@color/gray_6"
            android:textSize="@dimen/text18_size" />

        <TextView
            android:id="@+id/tv_dialog_content1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/dialog_common_bg"
            android:gravity="bottom|center_horizontal"
            android:textColor="@color/color_orange"
            android:textSize="@dimen/text18_size"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_dialog_content2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textColor="@color/color_dialog_text"
            android:textSize="@dimen/text14_size"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/et_input_occupational_label"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:padding="6dp"
            android:layout_marginBottom="10dp"
            android:textCursorDrawable="@drawable/shape_rectangle_theme_cursor"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/text16_size"
            android:background="@drawable/shape_usercenter_edit_myintroduction"
            android:visibility="gone"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/item_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/shape_dialog_left_angle_bg"
            android:gravity="center"
            android:text="取消"
            android:clickable="true"
            android:textColor="@color/gray_9"
            android:textSize="@dimen/text16_size" />

        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="@color/item_line" />

        <TextView
            android:id="@+id/tv_dialog_confirmg"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/shape_dialog_right_angle_bg"
            android:gravity="center"
            android:text="确定"
            android:clickable="true"
            android:textColor="@color/color_head_blue"
            android:textSize="@dimen/text16_size" />

    </LinearLayout>
</LinearLayout>